{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@ui/*": ["src/ui/*"]
    },
    "types": ["@figma/plugin-typings"],
    "composite": false
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.module.css"
  ]
}
